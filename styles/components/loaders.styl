.loader
	display inline-block
	width 50px
	height @width
	border 8px solid rgba(black, 0.1)
	border-left-color $green
	border-radius 100%
	animation loader 1.2s linear infinite
	background transparent !important

.loader.sm
.loader.small
	width 40px
	height @width
	
.loader.lg
.loader.large
	width 60px
	height @width
	

@keyframes loader
	to
		transform(rotate(360deg))