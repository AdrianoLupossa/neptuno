.card
	margin-top 10px
	width 28%
	min-height 300px
	border 1px solid #ccc
	display inline-block
	position relative
	margin-right 10px
	borderRadius(3px)
	boxShadow(1px 1px 1px rgba(black,0.2))
	&:last-child
		margin-right 0
	.title
		borderRadius(3px 3px 0 0)
		background-color $green
		display inline-block
		font-size 1em
		margin 0
		padding 5px
		width 100%
	img
		width 100%
		height 150px
	img + .title
		background-color transparent
		
.card-group
	margin-top 10px
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content space-between
	
@media screen and (max-width 480px)
	.card-group.mobile
		display block
		.card
			width 100%
	
	.card.mobile
		width 100%	
	
.card .content
.card.content
	font-size 10pt
	padding 10px
	color #222
	
	