.card
	margin-top 10px
	width 30%
	border 1px solid #ccc
	display inline-block
	position relative
	margin-right 10px
	borderRadius(3px)
	boxShadow(1px 1px 1px rgba(black,0.2))
	&:last-child
		margin-right 0
	.title
		borderRadius(3px 3px 0 0)
		display inline-block
		font-size 1em
		margin 0
		padding 15px
		width 100%
		border-bottom 1px solid #ddd
	img
		width 100%
		height 200px
	img + .title
		background-color transparent
		border-bottom none
		
		
.card-group
	margin-top 10px
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content space-between
@media screen and (max-width $screen-sm)
	&.responsive
		display block
		.card
		.card.responsive
			width 100%
			 	
.card .content
.card.content
	font-size 10pt
	padding 15px
	color #555
	
	