.card
	margin-top 10px
	width 250px
	min-height 300px
	border 1px solid #ccc
	display inline-block
	borderRadius(4px)
	boxShadow(1px 1px 1px rgba(black,0.2))
	&:last-child
		margin-right 0
	
.card.content
		padding 10px
.title
	background-color $green
	display inline-block
	font-size 15px
	margin 0
	padding 5px
	color $white
	width 100%
		
.card-group
	margin-top 10px
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content space-around
	

@media screen and (max-width 480px)
	.card-group.mobile
		flex-wrap wrap
		.card
			width 100%
	
	.card.mobile
		width 100%	
		
	