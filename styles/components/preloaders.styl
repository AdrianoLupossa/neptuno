.preloader
	display inline-block
	width 50px
	height @width
	border 5px solid rgba(black, 0.1)
	border-left-color $dark-green
	border-radius 100%
	animation preloader 0.5s linear infinite
	background-color transparent
	

.preloader.fast
	animation preloader 0.1s linear infinite
	
.preloader.slow
	animation preloader 1.2s linear infinite

.preloader.sm
.preloader.small
	width 40px
	height @width
	
.preloader.lg
.preloader.large
	width 60px
	height @width
	
.preloader.green
.preloader.success
	border-left-color $green
	background-color transparent !important
	
.preloader.dark-green
	border-left-color $dark-green
	background-color transparent !important
	
.preloader.orange
	border-left-color $orange
	background-color transparent !important
	
.preloader.dark-orange
.preloader.warning
	border-left-color $dark-orange
	background-color transparent !important
	
.preloader.red
.preloader.danger
	border-left-color $red
	background-color transparent !important
	
.preloader.dark-red
	border-left-color $dark-red
	background-color transparent !important
	
.preloader.blue
	border-left-color $blue
	background-color transparent !important
	
.preloader.dark-blue
	border-left-color $dark-blue
	background-color transparent !important

@keyframes preloader
	to
		transform(rotate(360deg))