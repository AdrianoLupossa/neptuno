.text-error
	color $dark-red
	
.text-success
	color $green
	
.text-warning
	color $dark-orange
	
.alert
	borderRadius(4px)
	transition(0.5s all linear)
	will-change opacity
	
alert(bgColor, color)
	display block
	min-height 0
	padding 17px 15px 15px 15px
	font-size 12pt
	background-color rgba(bgColor, 0.3);
	color color

.alert:not(.flat).success
	alert($green, $dark-green)
.alert:not(.flat).danger
	alert($red, darkred)
.alert:not(.flat).warning
	alert($orange, #7d6608)
	
.alert.floating
	position fixed
	right 0
	margin-right 5px
	width 300px
	&:not(.top)
		bottom 10px

.alert.floating.top
	top 10px
	right 10px
	
.alert.floating.left
	left 10px
	bottom 10px
	
.alert.square
	borderRadius(0)
	
.alert.block
	width 100%
	
flatColor($color)
	border-color $color
	.title
		color $color
		

.alert.flat
	width 23em
	min-height 100px
	display block
	border-left 5px solid $black
	padding 18px
	background-color #fbfbfb
	borderRadius(4px)
	boxShadow(5px 5px 10px rgba(153, 153, 153, 0.349019607843137))
	.title
		color $black
		margin 0
		padding 0
		
.alert.flat.success
	flatColor($green)
	
.alert.flat.warning
	flatColor($dark-orange)
	
.alert.flat.danger
	flatColor($red)
	
.alert > .close
	float right
	color #777
	&:hover
		color #000
	&:before
		content 'x'
		font-family verdana
		font-size 14pt
		position relative
		bottom 5px
		cursor pointer
		
.alert:target
	opacity 0
	z-index -100
	
.alert .title
	display inline
	border-bottom 0

@media screen and (max-width 480px)
	.alert.danger
	.alert.warning
	.alert.success
		display block
		width 100%
	.alert.floating
		z-index 3
		position static