.btn
	color #fbfbfb
	text-transform uppercase
	font-size 0.8em
	background-color #f5f5f5
	outline none
	box-sizing border-box
	padding 0.9em 0.8em 0.8em 0.8em
	border 1px solid #ccc
	borderRadius(3px)
	boxShadow(1px 1px 10px #ccc)
	transition(opacity 0.1s ease-in)
	&:not(.is-disabled):not([disabled])
		&:hover
			border-color $btn-border-color
	&:not(.primary):not(.warning):not(.secondary):not(.danger):not(.inverse)
		color #000
			
.btn.block
	display block
	width 100%
	&:not(:last-child)
		margin-bottom 5px
			
a.btn
	line-height 35px
			
.btn:not(.is-disabled):not([disabled])
	cursor pointer
	
// .btn:not(has-wave)
// 	&:active
// 		boxShadow(1px 0 0 #bbb)
		
.btn.primary
	background-color $green
	
.btn.warning
	background-color $orange
	
.btn.secondary
	color $white
	background #6c757d
	border-color #6c757d
	
.btn.danger
	background-color $red

.btn.inverse
	background-color #333
	&:hover
		border-color $btn-border-color
		
.btn.small
.btn.sm
	padding 0.6em
	
.btn.large
.btn.lg
	padding 1em
		
.btn.has-wave:active
	&:not(.is-disabled)
		opacity 0.8
			
.btn.is-disabled
.btn[disabled]
	border-color $btn-border-color
	opacity 0.5