.carousel
	.min 
		display flex
		flex-wrap wrap
		width 100%
		list-style none
		position relative
		padding 0
		img
			max-width 350px
			padding 10px
			transition(opacity 0.3s linear);
			&:hover
				cursor zoom-in
				opacity 0.7
	.picture
		display none
		&:target
			display block
			width 100%
			height 100%
			top 0
			left 0
			background-color #222
			@media screen and (min-width $screen-sm)
				background rgba(black, 0.8)
				z-index 1
			position fixed
			.inner
				position relative
			.inner img
			figure > img
				opacity 1
		figure
			width 100%
			margin 0
			padding 0
			&:hover .caption.hover
				opacity 1
			@media screen and (min-width $screen-sm)
				width 1000px
				margin 100px auto	
			img
				width 100%
				height calc(100vh - 200px)
				@media screen and (max-width $screen-sm)
					height 99vh
				opacity 0
			a.btn-prev,
			a.btn-next,
			a.btn-close
				color #fff
				font-family 'Arial'
				text-decoration none
				position absolute
				width 50px
				height 50px
				font-size 30px
				text-align center
				z-index 1
				transition(transform 0.2s)
			.btn-prev
				left 5%
				top 46%
				padding 10px 10px 7px 7px
				borderRadius(100%)
				background-color $green
				&:hover
				&:active
					color #ccc
					transform(scale(1.1))
				&::before
					content "❮" //«
			.btn-next
				right 5%
				top 46%
				padding 10px 7px 7px 10px
				borderRadius(100%)
				background-color $green
				&:hover
				&:active
					color #ccc
					transform(scale(1.1))
				&::before
					content "❯" //»
			.btn-close
				top 10px
				right 2%
				&:hover
					color #ccc
				&:before
					content 'x'
			.caption
				position absolute
				bottom 3px
				background-color rgba(black, 0.7)
				display block
				width 100%
				color #fff
				padding 7px
				&.hover
					transition(opacity 0.2s linear)
					@media screen and (min-width $screen-sm)
						opacity 0
				h1, h2, h3, h4
					display block
					line-height 1.5
					margin 0
					color #fff	
					
.card .min
	@media screen and (min-width $screen-sm)
		flex-wrap nowrap
		
		
		
.materialbox img
[type='checkbox'] + label > img
	position relative
	@media screen and (max-width $screen-sm)
		width 100%
	transition(opacity 0.3s linear);
	&:hover
		opacity 0.7
		
		
.materialbox input
[type='checkbox'].materialbox
	visibility hidden
	position absolute
	margin-left -1000px
	
.materialbox label
.materialbox + label
	cursor zoom-in
		
.materialbox > [type='checkbox']:checked + label
.materialbox [type='checkbox']:checked + label
	display flex
	align-items center
	justify-content center
	cursor zoom-out
	margin auto
	width 100%
	height 100%
	position fixed
	z-index 1
	top 0
	left 0
	background-color rgba(black, 0.8)
	&::after
		content attr(data-caption)
		width 100%
		background-color rgba(black, 0.7)
		color #fff
		padding 20px
		bottom 0%
		left 0
		z-index 1
		position absolute
	& img
		&:hover
			opacity 1
		min-width 700px