.carousel
	.min 
		display flex
		width 100%
		list-style none
		position relative
		img
			max-width 350px
			padding 10px
			transition(transform 0.5s)
			&:hover
				transform(scale(1.2))
	.picture
		display none
		&:target
			display block
			width 100%
			height 100%
			top 0
			left 0
			background rgba(black, 0.8)
			position fixed
			z-index 1
			.inner
				position relative
			.inner img
			figure img
				opacity 1
		figure
			&:hover .caption.hover
				opacity 1
			width 1000px
			margin 150px auto
			img
				width 100%
				height 500px
				opacity 0
			a.btn-prev,
			a.btn-next,
			a.btn-close
				color #fff
				font-family 'Arial'
				text-decoration none
				position absolute
				width 50px
				height 50px
				font-size 30px
				text-align center
				transition(transform 0.2s)
			.btn-prev
				left 5%
				top 46%
				padding 10px 10px 7px 7px
				borderRadius(100%)
				background-color $green
				&:hover
				&:active
					color #ccc
					transform(scale(1.1))
				&::before
					//«
					content "❮"
			.btn-next
				right 5%
				top 46%
				padding 10px 7px 7px 10px
				borderRadius(100%)
				background-color $green
				&:hover
				&:active
					color #ccc
					transform(scale(1.1))
				&::before
					//»
					content "❯"
			.btn-close
				top 10px
				right 2%
				&:hover
					color #ccc
				&:before
					content 'x'
			.caption
				position absolute
				bottom 3px
				background-color rgba(black, 0.7)
				display block
				width 100%
				color #fff
				padding 7px
				&.hover
					transition(opacity 0.2s linear)
					opacity 0
				h1, h2, h3, h4
					display block
					line-height 1.5
					margin 0
					color #fff		
		